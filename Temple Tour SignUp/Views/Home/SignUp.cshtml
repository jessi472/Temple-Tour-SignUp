@{
    ViewData["Title"] = "Layton Temple Tours";
}

@model Appointment
<!-- Page content-->
<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                <h1 class="fw-bolder">Tour Sign Up</h1>
                <p class="lead fw-normal text-muted mb-0">Please enter your information</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form id="contactForm" method="post" asp-controller="Home" asp-action="SignUpForm">
                        <div asp-validation-summary="All"></div>
                        <!-- Name input-->
                        <div class="form-floating mb-3 text-center">
                            <p>Appointment:</p>
                            <p>@(ViewBag.TimeSlot.Date + " " + ViewBag.TimeSlot.Time)</p>
                            <input class="form-control" id="name" type="hidden" value="@ViewBag.TimeSlot.TimeSlotId" asp-for="TimeSlotId" />
                        </div>
                        <!-- Name input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="name" type="text" placeholder="Enter your group name..." asp-for="GroupName" />
                            <label for="name">Group name</label>
                        </div>
                        <!-- Group size input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="size" type="number" placeholder="1" asp-for="GroupSize" />
                            <label for="phone">Group Size</label>
                        </div>
                        <!-- Email address input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" type="email" placeholder="name@example.com" asp-for="Email" />
                            <label for="email">Email address</label>
                        </div>
                        <!-- Phone number input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="phone" type="tel" placeholder="(123)456-7890" asp-for="Phone" />
                            <label for="phone">Phone number (optional)</label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-primary text-center">Confirm Appointment</button>
                            <a class="btn btn-secondary" asp-controller="Home" asp-action="Cancellation" asp-route-tsId="@ViewBag.TimeSlot.TimeSlotId">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Contact cards-->
        <div class="row gx-5 row-cols-2 row-cols-lg-4 py-5">
            <div class="col">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-chat-dots"></i></div>
                <div class="h5 mb-2">Chat with us</div>
                <p class="text-muted mb-0">Chat live with one of our support specialists.</p>
            </div>
            <div class="col">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-people"></i></div>
                <div class="h5">Ask the community</div>
                <p class="text-muted mb-0">Explore our community forums and communicate with other users.</p>
            </div>
            <div class="col">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-question-circle"></i></div>
                <div class="h5">Support center</div>
                <p class="text-muted mb-0">Browse FAQ's and support articles to find solutions.</p>
            </div>
            <div class="col">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-telephone"></i></div>
                <div class="h5">Call us</div>
                <p class="text-muted mb-0">Call us during normal business hours at (555) 892-9403.</p>
            </div>
        </div>
    </div>
</section>