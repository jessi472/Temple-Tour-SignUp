@{
    ViewData["Title"] = "Tour Sign Up";
}

@model List<TimeSlot>

<table class="table table-bordered table-striped">

    <thead>

        <tr>

            <td>Date</td>
            <td>Time</td>
            <td>Taken</td>

        </tr>

    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>

                <td>@x.Date</td>
                <td>@x.Time</td>


                @if (x.Taken == false)
                {
                    <td>
                        <button class="btn btn-primary">Sign Up</button>
                    </td>
                }
                else
                {
                    <td>Taken</td>
                }
            </tr>
        }



    </tbody>
</table>

