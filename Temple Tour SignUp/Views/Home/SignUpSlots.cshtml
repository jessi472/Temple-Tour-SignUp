
@{
}
@model List<TimeSlot>

<table class="table table-bordered table-striped">

    <thead>
        
        <tr>
            
            <td>Date</td>
            <td>Time</td>
            <td>Taken</td>

        </tr>

    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>

            <td>@x.Date</td>
            <td>@x.Time</td>


            @if (x.Taken == false)
            {
                <td>
                    <a asp-controller="Home" asp-action="SignUpForm" asp-route-timeslotid="@x.TimeSlotId" class="btn btn-info btn-primary">Sign Up</a>
                </td>
            }
            else
            {
                <td>Taken</td>
            }
        </tr>
         }

        

    </tbody>
</table>

